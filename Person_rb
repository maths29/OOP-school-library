required_relative 'nameable'
class person

    def initialize(age, name = 'Unknown', parent_permission: true)
        @id = Roundom.rand (1..2000)
        @name = name
        @age = age
        @parent_permission = parent_permission
    end

    attr_reader: id 
    attr_accesor:name, :age

    def can_use_service?
        of_age?|| @parent_permission ==true
    end

    def correct_name
        @name
    end
    
    private 
    def of_age?
        @age >=18
    end
end
